<Page x:Class="MasterSaveDemo.View.TraCuu_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MasterSaveDemo.View"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="18"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        
        DataContext="{StaticResource TraCuuVM}"
      
      Name="TraCuu"
      Title="TraCuu_Page">

	<Grid>
		<materialDesign:DialogHost IsOpen="{Binding DialogOpen}" BorderBrush="{DynamicResource MaterialDesignDivider}">
			<materialDesign:DialogHost.DialogContent>
				<Grid Width="Auto" Height="Auto" HorizontalAlignment="Stretch">
					<StackPanel Orientation="Vertical" Margin="15">
						<materialDesign:PackIcon Kind="CheckCircleOutline" Foreground="{StaticResource PrimaryHueMidBrush}" Width="50" Height="50" HorizontalAlignment="Center"/>
						<TextBlock FontSize="18" Foreground="Gray" Width="auto" Margin="15 15 15 15" TextWrapping="Wrap" Text="{Binding ThongBao}" HorizontalAlignment="Center"/>
						<Button Content="OK" Command="{Binding DialogOK}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center"/>
					</StackPanel>
				</Grid>
			</materialDesign:DialogHost.DialogContent>
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"></RowDefinition>
					<RowDefinition></RowDefinition>
				</Grid.RowDefinitions>
				<Grid Grid.Row="0">
					<materialDesign:Card Margin="5"
                  Background="{DynamicResource PrimaryHueDarkBrush}"
                  Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                  Padding="8">
						<TextBlock FontWeight="SemiBold" TextAlignment="Center" FontSize="20">TRA CỨU THẺ KHO</TextBlock>
					</materialDesign:Card>
				</Grid>
				<Grid Grid.Row="1">
					<Grid.ColumnDefinitions>
						<ColumnDefinition></ColumnDefinition>
						<ColumnDefinition></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<Grid Grid.Row="0">
						<Grid.RowDefinitions>
							<RowDefinition Height="140"></RowDefinition>
							<RowDefinition></RowDefinition>
						</Grid.RowDefinitions>
						<Grid Grid.Row="0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="250"></ColumnDefinition>
								<ColumnDefinition Width="auto"></ColumnDefinition>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition></RowDefinition>
								<RowDefinition></RowDefinition>
							</Grid.RowDefinitions>
							<Grid Grid.Row="0">
								<TextBox Width="200" FontSize="16" materialDesign:HintAssist.Hint="Tên Mặt Hàng"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="{StaticResource SecondaryAccentBrush}" VerticalAlignment="Center"
                                 Text="{Binding txtTenMH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
							</Grid>
							<Grid Grid.Row="1">
								<TextBox Width="200" FontSize="16" materialDesign:HintAssist.Hint="Mã Mặt Hàng"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="{StaticResource SecondaryAccentBrush}" VerticalAlignment="Center"
                                 Text="{Binding txtMaMH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
							</Grid>
							<Grid Grid.Column="1">
								<Button Grid.Column="0" Command="{Binding SearchCommand}" CommandParameter="{Binding ElementName=ThemHangWindow}"
                        Style="{StaticResource MaterialDesignRaisedButton}" IsDefault="True"
                        Width="120" Content="TRA CỨU" Margin="10,25,0,0">
								</Button>
							</Grid>
						</Grid>
						<Grid Grid.Row="1">
							<materialDesign:Card Margin="5,5,5,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
								<ListView x:Name="listViewReport" ItemsSource="{Binding ListTK, Mode=TwoWay}" SelectionMode="Single"
                              HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Auto"
                              HorizontalContentAlignment="Stretch" Margin="0,0,0,0" Width="900" SelectedItem="{Binding SelectedTheKho, Mode=TwoWay}">
									<ListView.View>
										<GridView>
											<GridViewColumn Width="100" Header="STT" DisplayMemberBinding="{Binding STT}"/>
											<GridViewColumn Width="150" Header="Mã Thẻ Kho" DisplayMemberBinding="{Binding MaThe}"/>
											<GridViewColumn Width="150" Header="Mã Mặt Hàng" DisplayMemberBinding="{Binding MaMH}"/>
											<GridViewColumn Width="150" Header="Tên Mặt Hàng" DisplayMemberBinding="{Binding TenMH}"/>
											<GridViewColumn Width="150" Header="Người Lập" DisplayMemberBinding="{Binding NguoiLap}"/>
											<GridViewColumn Width="150" Header="Ngày Lập" DisplayMemberBinding="{Binding NgayLap}"/>
										</GridView>
									</ListView.View>
									<i:Interaction.Triggers>
										<i:EventTrigger EventName="SelectionChanged">
											<i:InvokeCommandAction Command="{Binding SelectionChangedCommand}"
                                                   CommandParameter="{Binding ElementName=listDateDisplayed}"/>
										</i:EventTrigger>
									</i:Interaction.Triggers>
								</ListView>
							</materialDesign:Card>

						</Grid>
					</Grid>
					<Grid Grid.Column="1">
						<Grid.RowDefinitions>
							<RowDefinition Height="50"></RowDefinition>
							<RowDefinition Height="50"></RowDefinition>
							<RowDefinition Height="auto"></RowDefinition>
						</Grid.RowDefinitions>
						<Grid Grid.Row="1">
							<materialDesign:Card Margin="5"
                  Background="{DynamicResource PrimaryHueDarkBrush}"
                  Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                  Padding="8">
								<TextBlock FontWeight="SemiBold" TextAlignment="Center" FontSize="20">CHI TIẾT PHIẾU</TextBlock>
							</materialDesign:Card>
						</Grid>
						<Grid Grid.Row="2">
							<materialDesign:Card Margin="5,5,5,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.ColumnSpan="2">
								<ListView x:Name="listView" ItemsSource="{Binding ListCTTK, Mode=TwoWay}" SelectionMode="Single"
                              HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Auto"
                              HorizontalContentAlignment="Stretch" Margin="0,0,0,0" Width="900" SelectedItem="{Binding SelectedMatHang, Mode=TwoWay}">
									<ListView.View>
										<GridView>
											<GridViewColumn Width="100" Header="STT" DisplayMemberBinding="{Binding STT}"/>
											<GridViewColumn Width="150" Header="Loại" DisplayMemberBinding="{Binding Loai}"/>
											<GridViewColumn Width="150" Header="Ngày" DisplayMemberBinding="{Binding Ngay}"/>
											<GridViewColumn Width="150" Header="Nhập" DisplayMemberBinding="{Binding Nhap}"/>
											<GridViewColumn Width="150" Header="Xuất" DisplayMemberBinding="{Binding Xuat}"/>
											<GridViewColumn Width="150" Header="Diễn giải" DisplayMemberBinding="{Binding DienGiai}"/>
										</GridView>
									</ListView.View>

								</ListView>
							</materialDesign:Card>

						</Grid>
					</Grid>
				</Grid>
			</Grid>
		</materialDesign:DialogHost>

	</Grid>
</Page>	